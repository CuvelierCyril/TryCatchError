{% extends 'base.html.twig' %}

{% block title %}Se connecter{% endblock %}
{% block body %}
    <div class="container-fluid">
        <div class="row">
            <div class="col-xs-6 col-sm-3 col-lg-9 offset-lg-1 box-shadow-page pb-4">
                <h1 class="col-12 text-center mb-5">Se connecter</h1>
                <form id="login-form" method="POST" action="{{ path('apiLogin') }}">
                    <div class="form-group m-auto col-4">
                        <label class="col-12 pl-0" for="register-form-email">Adresse Email<span class="pl-4" id="emailError"></span></label>
                        <input type="email" class="form-control" id="register-form-email" placeholder="jean@exemple.com" name="email">
                    </div><br>
                    <div class="form-group m-auto col-4">
                        <label class="col-12 pl-0" for="register-form-password">Mot de passe<span class="pl-4" id="passwordError"></span></label>
                        <input type="password" class="form-control" id="register-form-password" placeholder="Mot de passe" name="password">
                    </div><br>
                    <div class="row col-4 offset-4">
                        <button type="submit" class="btn btn_background col-5">Se connecter</button><span class="col-2 text-center">~~</span><button type="button" id="reset_password" class="col-5 btn btn_background">Mot de passe oublié</button>
                        <span id="divFailed" class="col-12 text-center"></span>
                    </div>
                </form>
                <div class="text-center" id="formSuccess"></div>
            </div>
        </div>
    </div>
    <div class="modal fade" id="modalResetPassword" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="exampleModalLabel">Mot de passe oublié</h5>
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
            <div class="modal-body">
              <form action="{{ path('apiResetPasswordMail') }}" method="POST" id="formResetPassword">
                <div class="form-group m-auto col-12">
                    <label class="col-12 pl-0" for="register-form-email">Adresse Email<span class="pl-4" id="emailError"></span></label>
                    <input type="email" class="form-control" id="resetPasswordEmail" placeholder="jean@exemple.com" name="emailReset">
                </div>
              </form>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-dismiss="modal">Fermer</button>
              <button type="button" class="btn btn-primary" id="btnResetPassword">Valider</button>
            </div>
          </div>
        </div>
      </div>
{% endblock %}
{% block javascripts %}
<script>
    var addBtn = ["{{ url('profil') }}", "{{ url('createSubject') }}", "{{ url('disconnect') }}", "{{ url('admin', {type : 'all', page : 1}) }}"];
    var rout_mail = ["{{ url('apiSendMail') }}"]
</script>
<script src="{{ asset('js/login.js') }}"></script>
{% endblock %}