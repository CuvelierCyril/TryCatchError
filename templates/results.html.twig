{% extends 'base.html.twig' %}

{% block title %}Résultats{% endblock %}
{% block body %}
<h1 class="m-auto text-center text-light police-text">Résultats : </h1>
{% if msg is defined %}
    {% if msg == true %}
        <p class="alert alert-danger">Mot clé incorrect, veuillez affiner votre recherche</p>
    {% else %}
        <p class="alert alert-danger">Aucun article trouvé</p>
    {% endif %}
{% else %}
    <div class="accordion page-trans">
        {% for article in articles %}
        <div class="row p-2">
            <div class="col-8">
                <h5 class="mb-0">
                    <p class="title text-light">{{ article.title|raw }}</p>
                </h5>
                <p class="text-light">{{ article.description }}</p>
                <a  href="{{path('subject', {id : article.id})}}" class="btn btn-color active m-2" role="button">Voir l'article</a>
            </div>
            <div class="col-12 offset-xl-3 col-xl-1 col-md-2 offset-md-2 text-center">
                <p class="border bg-white">Vues : {{ article.view }}</p>
                <p class="border bg-white">réponses : {{ article.answers|length }}</p>
            </div>
        </div>
        {% endfor %}
    </div>
{% endif %}
{% endblock %}
{% block javascripts %}{% endblock %}
