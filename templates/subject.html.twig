{% extends 'base.html.twig' %}

{% block title %}sujet{% endblock %}
{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/prism.css') }}">
{% endblock %}
{% block body %}
<h1 class="text-center">Sujet</h1>
{% if vide is defined %}
    <p>Aucun article trouvé</p>
{% else %}
    {% if article is defined %}
        <p>Titre : {{ article.title }}</p>
        <p>Contenu : <span class="content">{{ article.content|raw }}</span></p>
        <p>Fait le : {{ article.date|date('Y-m-d H:i:s') }} par {{ article.author.nickname }}</p>
        {% if answers is defined %}
            {% for answer in answers %}
                {% if answer.verified == 1 %}
                    <div class="border answer{{ answer.id }} bg-success">
                        <p>Réponse : {{answer.content}}</p>
                        <p>Fait le : {{ answer.date|date('Y-m-d H:i:s') }} par {{ answer.author.nickname }}</p>
                        {% if app.session.get('account') is not null %}
                            {% if app.session.get('account').rank == 2 %}
                                <button class="delete-answer" id="{{ answer.id }}">Supprimer la reponse</button>
                                <button class="validate-answer" id="{{ answer.id }}">Valider la reponse</button>
                            {% endif %}
                        {% endif %}
                    </div>
                    {% endif %}
            {% endfor %}
            {% for answer in answers %}
                {% if answer.verified == 0 %}
                    <div class="border answer{{ answer.id }}">
                        <p>Réponse : {{answer.content}}</p>
                        <p>Fait le : {{ answer.date|date('Y-m-d H:i:s') }} par {{ answer.author.nickname }}</p>
                        {% if app.session.get('account') is not null %}
                            {% if app.session.get('account').rank == 2 %}
                                <button class="delete-answer" id="{{ answer.id }}">Supprimer la reponse</button>
                                <button class="validate-answer" id="{{ answer.id }}">Valider la reponse</button>
                            {% endif %}
                        {% endif %}
                    </div>
                {% endif %}
            {% endfor %}
        {% endif %}
        {% if app.session.get('account') is not null %}
            {% if app.session.get('account').rank == 2 %}
                <button id="delete-subject">Supprimer l'article</button>
            {% endif %}
            <form action="{{ path('apiCreateAnswer') }}" method="POST" id="answer-form">
                <p><textarea name="content" id="content" cols="30" rows="10" placeholder="Votre réponse"></textarea><div id="contentError"></div></p>
                <p><input type="submit"><div id="divFailed"></div></p>
            </form>
            <div id="formSuccess"></div>
        {% endif %}
    {% endif %}
{% endif %}
{% endblock %}
{% block javascripts %}
{% if article is defined %}
    <script>
        var subjectId = "{{ article.id }}";
        var apiDeleteSubject = "{{ path('apiDeleteSubject') }}";
        var apiDeleteAnswer = "{{ path('apiDeleteAnswer') }}";
        var apiVerifiedAnswer = "{{ path('apiVerifiedAnswer') }}";
    </script>
    <script src="{{ asset('js/createAnswer.js') }}"></script>
    <script src="{{ asset('js/deleteSubject.js') }}"></script>
    <script src="{{ asset('js/subject.js') }}"></script>
    <script src="{{ asset('js/prism.js') }}"></script>
{% endif %}
{% endblock %}